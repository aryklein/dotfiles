{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_newline": "alt+enter"
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "tavily": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}"
      ],
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    },
    "grafana": {
      "type": "remote",
      "url": "http://grafana-mcp.query.prod.telnyx.io:8000/mcp",
      "enabled": true
    }
  },
  "provider": {
    "telnyx-litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Telnyx LiteLLM Gateway",
      "options": {
        "baseURL": "{env:LITELLM_BASE_URL}",
        "apiKey": "{env:LITELLM_API_KEY}"
      },
      "models": {
        "GLM-5": {
          "name": "GLM 5 (Latest)",
        },
        "Kimi-K2.5": {
          "name": "Kimi K2.5 (Code-focused)",
        },
      }
    }
  }
}
