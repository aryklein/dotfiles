{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_newline": "alt+enter"
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "tavily": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}"
      ],
      "enabled": true
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ],
      "enabled": true
    }
  },
  "provider": {
    "telnyx-litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Telnyx LiteLLM Gateway",
      "options": {
        "baseURL": "{env:ANTHROPIC_BASE_URL}",
        "apiKey": "{env:ANTHROPIC_AUTH_TOKEN}"
      },
      "models": {
        "anthropic/claude-sonnet-4-5-20250929": {
          "name": "Sonnet 4.5 (Latest)"
        },
        "anthropic/claude-opus-4-5-20251101": {
          "name": "Opus 4.5 (Latest)"
        },
        "openai/gpt-5.1-2025-11-13": {
          "name": "GPT-5.1 (Nov 2025)"
        },
        "xai/grok-code-fast": {
          "name": "Grok Code Fast"
        },
        "xai/grok-4-fast-reasoning": {
          "name": "Grok 4 Fast Reasoning"
        },
        "aiswe/coding-model-think-high": {
          "name": "Telnyx Coding (High Thinking)"
        },
        "groq/moonshotai/kimi-k2-instruct-0905": {
          "name": "Kimi K2 Instruct (Sep 2025)",
          "options": {
            "max_tokens": 16000
          }
        },
        "fireworks_ai/accounts/fireworks/models/glm-4p6": {
          "name": "GLM 4.6 (Latest)",
          "options": {
            "max_tokens": 16000
          }
        }
      }
    }
  }
}
